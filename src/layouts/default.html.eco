<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title><%= @getPreparedTitle() %></title>
  <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans:400,700">
  <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.1/css/bootstrap-combined.min.css" rel="stylesheet">
  <link href="//netdna.bootstrapcdn.com/font-awesome/2.0/css/font-awesome.css" rel="stylesheet">
  <!--[if lt IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"></script><![endif]-->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <style>
    body {padding-top: 60px;color: #404040;font: 13px/1.231 'Open Sans', sans-serif;}
    .containerx {width:1100px;}
    #why .icon-large {font-size: 18px;text-align: center;padding-right: 4px;}
    .CodeMirror {border: 1px solid black;}
    .cm-mustache {color: #0ca;}
    .CodeMirror-scroll {min-height: 200px; overflow: auto;background-color:#fff;}
  </style>
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#">JSTag</a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li class="<%= @document.index_class %>"><a href="index.html">Home</a> </li>
            <li class="<%= @document.testspec_class %>"><a href="testrun.html">Test Specs</a></li>
            <!--<li><a href="#contact">Contact</a></li>-->
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>
  
  <div id="container" class="container">
    <div class="row">
      <div class="span2" style="displayx:none;">
          <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <li class="nav-header">Examples</li>
              <% for page in @getCollection("pages").toJSON(): %>
                   <li class="<%= if page.id is @document.id then 'active' else 'inactive' %>">
                      <a href="<%= @getRoot() %><%= page.url %>">
                          <%= page.name %>
                      </a>
                  </li>
              <% end %>
            </ul>
          </div>
      </div>
      <div class="span10" id="contentContainer">
        <% if @document.supress_cm :%>
        <% else :%>
        <textarea id="cmeditor" name="cmeditor" class="demojs CodeMirror-scroll"  style="height:350px;"></textarea>
        <% end %>
        <%- @content %>
      </div>
    </div>
  </div>
  <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.2.1/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/d3/2.10.0/d3.v2.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.3.1/underscore-min.js"></script>
  <%- @getBlock('scripts').toHTML() %>
  <link rel="stylesheet" href="//developer.lytics.io/codemirror/codemirror.css">
  <link rel="stylesheet" href="//developer.lytics.io/codemirror/theme/default.css">
  <script src="//developer.lytics.io/codemirror/codemirror.js"></script>
  <script src="//developer.lytics.io/codemirror/mode/xml/xml.js"></script>
  <script src="//developer.lytics.io/codemirror/mode/css/css.js"></script>
  <script src="//developer.lytics.io/codemirror/mode/javascript/javascript.js"></script>
  <script src="//developer.lytics.io/codemirror/mode/htmlmixed/htmlmixed.js"></script>
  <script type="text/javascript" charset="utf-8">
    $(document).ready(function(){
      var exHtml = $("#example_usage").html() 
      if (exHtml) {
        var docHtml = CodeMirror.fromTextArea(document.getElementById('cmeditor'), {
            mode: 'text/html',tabMode: 'indent',lineNumbers: true,
            overflow:true,indentUnit: 4,height:"<%= @document.cmheight %>"
        });
        docHtml.setValue(exHtml);
      }
    })
  </script>
</body>
</html>